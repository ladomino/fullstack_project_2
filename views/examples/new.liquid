{% layout 'layout.liquid' %}
{% block content %}
<div class="container-sm">
    <form action="/recipes" method="POST">
        <fieldset>
            <legend>Create New recipe</legend>
            <label class="form-label">Title: </label>
            <input 
                type="text" 
                name="title" 
                placeholder="enter recipe title"
                class="form-control"
            >
            <label class="form-label">Body:</label>
            <input 
                type="text" 
                name="body" 
                placeholder="enter recipe body" 
                class="form-control"
            >
            <label class="form-label">Amount:</label>
            <input 
                type="number" 
                name="amount" 
                class="form-control"
            >
            <label class="form-label">Ready:</label>
            <input 
                type="checkbox" 
                name="ready" 
                class="form-check-input"
            >
        </fieldset>
        <input type="submit" value="Create New recipe" class="btn btn-success">
    </form>
</div>
{% endblock %}