{% layout 'layout.liquid' %}
{% block content %}

<div class="container-lg">
    <div class="recipe_list_container"> 
        <div class="recipe_show_container">        
            <form action="/recipes/{{ recipe.id }}?_method=PUT" method="POST">
                <fieldset>
                    <legend>Edit recipe</legend>
                    <label class="form-label">Title: </label>
                    <input 
                        type="text" 
                        name="label" 
                        placeholder="{{ recipe.label }}"
                        value="{{ recipe.label }}"
                        class="form-control"
                    >
                    <label class="form-label">Image url:</label>
                    <input 
                        type="text" 
                        name="image" 
                        placeholder="{{ recipe.image }}" 
                        value="{{ recipe.image }}" 
                        class="form-control"
                    >
                    <label class="form-label">Yield:</label>
                    <input 
                        type="number" 
                        name="yield"
                        value="{{ recipe.yield }}"
                        placeholder="{{ recipe.yield }}"
                        class="form-control"
                    >
                    <label class="form-label">Ingredients:</label>

                    {% for line in recipe.ingredientLines %}
                        <input 
                            type="text" 
                            name="ingredientLines"
                            placeholder="{{ line }}" 
                            value="{{ line }}" 
                            class="form-control"
                        >
                    {% endfor %}

                </fieldset>
                <input type="submit" value="+ Update" class="btn" id="btn_plus">
            </form>
        </div>
    </div>
</div>

{% endblock %}