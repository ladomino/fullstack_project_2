{% layout 'layout.liquid'%}
{% block content %}
<div class="container-lg">

<!-- Recipes -->
    <h5>MyRecipes</h5>
    <div class="recipe_list_container">
        {% for item in recipes %}
            <div class="recipe_container">
                {% assign appRecipeId = item.recipe.uri | split: "#recipe_" %}
                {% if item.owner == userId %}
                     <a href="/recipes/mine/{{item.id}}">  
                       <img class="recipe_image" src="{{item.recipe.image}}" alt="{{item.recipe.label}}">
                     </a>
                {% else %}
                    <a href="/recipes/{{appRecipeId[1]}}">  
                        <img class="recipe_image" src="{{item.recipe.image}}" alt="{{item.recipe.label}}">
                    </a>
                {% endif %}           
                <div class="recipe_info">
                    <div class="recipe_type">
                        {%if item.owner == userId %}
                            <form class="form_display" action="/comment/{{item.id}}" method="GET">
                                <input type="submit" class="btn" id="mybtn_plus" value="+ Comments">
                                <input type="hidden" name="recipe.uri" value="{{appRecipe[1]}}">
                                <input type="hidden" name="recipe.label" value="{{item.recipe.label}}">
                                <input type="hidden" name="recipe.image" value="{{item.recipe.image}}">          
                          </form>
                        {% endif %}
                    </div>
                    <div class="recipe_type">
                        {% if item.owner == userId %}
                            <form class="form_display" action="/recipes/{{item.id}}/edit" method="GET">
                                <input type="submit" class="btn" id="mybtn_plus" value="+ Edit Recipe">
                            </form>
                        {% endif %}
                    </div>
                    <div class="recipe_type">
                        {%if item.owner == userId %}
                            <form class="form_display" action="/recipes/{{item.id}}?_method=DELETE" method="POST"> 
                                <input type="submit" class="btn" id="mybtn_plus" value="- MyRecipes">          
                            </form>
                        {% else %}
                            <form class="form_display" action="/recipes/{{appRecipeId[1]}}?q={{searchQ}}" method="POST"> 
                                <input type="submit" class="btn" id="btn_plus" value="+ MyRecipes">    
                            </form>
                        {% endif %}
                    </div>
                </div>
                <div class="recipe_name">{{item.recipe.label}}</div>
            </div>
        {% endfor %}
    </div>
</div>

{% endblock %}