{% layout 'layout.liquid' %}
{% block content %}
<div class="container-md">
    <article>
        <h2>
            {{ recipe.title }} -
            {% if recipe.ready %}
            Ready
            {% else %}
            Not Ready
            {%endif%}
        </h2>
        <h3>Amount: {{ recipe.amount }}</h3>
        <h6>Body: {{ recipe.body }}</h6>
        {% if recipe.owner == userId %}
        <div class="btn-group">

            <a href="/recipes/{{ recipe.id }}/edit" class="btn btn-primary">Edit</a>
            <form action="/recipes/{{ recipe.id }}?_method=DELETE" method="POST">
                <input type="submit" value="Delete" class="btn btn-danger">
            </form>
        </div>
        {% endif %}
    </article>
</div>
{% endblock %}